<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">WebAssembly</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="fa fa-fw fa-home" aria-hidden="true"></span> Home
            </NavLink>
            <NavLink class="nav-link" href="~/values" Match="NavLinkMatch.All">
                <span class="fa fa-fw fa-exchange-alt" aria-hidden="true"></span> Value Binding
            </NavLink>
            <NavLink class="nav-link" href="~/search" Match="NavLinkMatch.All">
                <span class="fa fa-fw fa-search" aria-hidden="true"></span> Live Search
            </NavLink>
            <NavLink class="nav-link" href="~/customise" Match="NavLinkMatch.All">
                <span class="fa fa-fw fa-cogs" aria-hidden="true"></span> Customise
            </NavLink>
            <NavLink class="nav-link" href="~/styling" Match="NavLinkMatch.All">
                <span class="fa fa-fw fa-paint-roller" aria-hidden="true"></span> Styling
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
